<Window x:Class="VSLauncher.Views.ExecuteVisualStudioWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Execute Visual Studio" Height="346" Width="520" WindowStartupLocation="CenterOwner"
 Background="{DynamicResource WindowBackgroundBrush}" Foreground="{DynamicResource WindowForegroundBrush}" ResizeMode="NoResize">
	<Grid Margin="12" Background="{DynamicResource PanelBackgroundBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/> <!-- Name -->
			<RowDefinition Height="Auto"/> <!-- Version -->
			<RowDefinition Height="Auto"/> <!-- Instance -->
			<RowDefinition Height="Auto"/> <!-- Command -->
			<RowDefinition Height="Auto"/> <!-- Path -->
			<RowDefinition Height="Auto"/> <!-- Monitor -->
			<RowDefinition Height="Auto"/> <!-- Options -->
			<RowDefinition Height="*"/>   <!-- spacer -->
			<RowDefinition Height="Auto"/> <!-- Buttons -->
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<!-- Name -->
		<DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
			<TextBlock Text="Name" VerticalAlignment="Center" Margin="0,0,8,4" Width="100"/>
			<TextBox x:Name="txtName" Height="28" FontWeight="Bold"/>
		</DockPanel>
		<!-- Version -->
		<DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
			<TextBlock Text="Version" VerticalAlignment="Center" Margin="0,4,8,4" Width="100"/>
			<ComboBox x:Name="cbxVersion" Height="32" ItemsSource="{Binding VisualStudioVersions}" SelectedItem="{Binding SelectedVisualStudioVersion}" DisplayMemberPath="Name" Width="350"/>
			<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" TextAlignment="Center">
				<Hyperlink Click="LinkVersions_Click">?</Hyperlink>
			</TextBlock>
		</DockPanel>
		<!-- Instance -->
		<DockPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
			<TextBlock Text="Instance" VerticalAlignment="Center" Margin="0,4,8,4" Width="100"/>
			<ComboBox x:Name="cbxInstance" Height="26" Width="350"/>
			<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" TextAlignment="Center">
				<Hyperlink Click="LinkInstances_Click">?</Hyperlink>
			</TextBlock>
		</DockPanel>
		<!-- Command -->
		<DockPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3">
			<TextBlock Text="Command" VerticalAlignment="Center" Margin="0,4,8,4" Width="100"/>
			<TextBox x:Name="txtCommand" Height="26" Width="350"/>
			<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" TextAlignment="Center">
				<Hyperlink Click="LinkCommands_Click">?</Hyperlink>
			</TextBlock>
		</DockPanel>
		<!-- Project/Solution Path -->
		<DockPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
			<TextBlock Text="Project/Solution" VerticalAlignment="Center" Margin="0,4,8,4" Width="100"/>
			<TextBox x:Name="txtPath" Height="26" Width="350"/>
			<Button Content="..." Width="30" Height="26" Margin="8,0,0,0" Click="Browse_Click" HorizontalAlignment="Right"/>
		</DockPanel>
		<!-- Preferred Monitor -->
		<DockPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3">
			<TextBlock Text="Preferred Monitor" VerticalAlignment="Center" Margin="0,4,8,4" Width="100"/>
			<ComboBox x:Name="cbxMonitor" Height="26" MinWidth="350"/>
			<Button Content="!" Width="30" Height="26" Margin="8,0,0,0" Click="PingMonitor_Click" ToolTip="Flash selected monitor" HorizontalAlignment="Right"/>
		</DockPanel>
		<!-- Options -->
		<StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical" Margin="0,12,0,0">
			<CheckBox x:Name="chkAdmin" Content="Run as Admin" Margin="0,0,0,0"/>
			<CheckBox x:Name="chkSplash" Content="Show Visual Studio Splash Window" Margin="0,4,4,0"/>
		</StackPanel>
		<!-- Buttons -->
		<StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
			<Button x:Name="btnBeforeAfter" Width="120" Height="36" Margin="0,0,8,0" Click="BeforeAfter_Click" IsEnabled="False">
				<DockPanel>
					<TextBlock Text="Before/After..." VerticalAlignment="Center" FontWeight="Bold"/>
				</DockPanel>
			</Button>
			<Button Width="100" Height="36" Margin="0,0,8,0" IsCancel="True">
				<DockPanel>
					<Image Source="pack://application:,,,/Resources/Images24/cancel_24x24.png" Width="24" Height="24"/>
					<TextBlock Text="Cancel" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
				</DockPanel>
			</Button>
			<Button Width="100" Height="36" IsDefault="True" Click="Ok_Click">
				<DockPanel>
					<Image Source="pack://application:,,,/Resources/Images24/Check_24x24.png" Width="24" Height="24"/>
					<TextBlock Text="Run" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
				</DockPanel>
			</Button>
		</StackPanel>
	</Grid>
</Window>