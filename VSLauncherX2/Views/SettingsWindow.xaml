<Window x:Class="VSLauncher.Views.SettingsWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Settings" Height="260" Width="420" WindowStartupLocation="CenterOwner"
 Background="{DynamicResource WindowBackgroundBrush}" Foreground="{DynamicResource WindowForegroundBrush}">
    <Grid Margin="12" Background="{DynamicResource PanelBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <CheckBox x:Name="chkAlwaysAdmin" Content="Always run as Administrator" Margin="0,0,0,8"/>
        <CheckBox x:Name="chkAutoStart" Content="Auto start at logon" Margin="0,0,0,8" Grid.Row="1"/>
        <CheckBox x:Name="chkSync" Content="Synchronize VS version on launch" Margin="0,0,0,8" Grid.Row="2"/>
        <CheckBox x:Name="chkShowPath" Content="Show path for solutions" Margin="0,0,0,8" Grid.Row="3"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,8,0,8">
            <TextBlock Text="Theme" Width="68" HorizontalAlignment="Left"/>
            <ComboBox x:Name="cboTheme" Width="180">
                <ComboBoxItem Content="System"/>
                <ComboBoxItem Content="Light"/>
                <ComboBoxItem Content="Dark"/>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="100" Height="36" Margin="0,0,8,0" IsCancel="True">
                <DockPanel Margin="0" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Button}}">
                     <Image Source="pack://application:,,,/Resources/images24/cancel_24x24.png" Width="24" Height="24" Margin="0,0,0,0"/>
                    <TextBlock Text="Cancel" VerticalAlignment="Center" Margin="8,0,0,0" FontWeight="Bold"/>
                </DockPanel>        
            </Button>
            <Button Width="100" Height="36" Margin="0,0,0,0" IsDefault="True" Click="Ok_Click">
                <DockPanel Margin="0" Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Button}}">
                   <Image Source="pack://application:,,,/Resources/Images24/Check_24x24.png" Width="24" Height="24" Margin="0,0,0,0"/>
                    <TextBlock Text="OK" VerticalAlignment="Center" Margin="8,0,0,0" FontWeight="Bold"/>
                </DockPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>