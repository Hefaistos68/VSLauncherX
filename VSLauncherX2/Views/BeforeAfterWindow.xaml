<Window x:Class="VSLauncher.Views.BeforeAfterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set before and after actions" Height="390" Width="410" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource WindowForegroundBrush}">
    <Grid Margin="12" Background="{DynamicResource PanelBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="txtTitle" Grid.Row="0" Grid.ColumnSpan="2" FontSize="16" FontWeight="Bold" />

        <!-- Before main task -->
        <DockPanel Grid.Row="1" Grid.Column="0" Margin="0,8,0,2">
            <TextBlock Text="Run Before Main Task" />
            <CheckBox x:Name="chkWaitExitBefore" Content="Wait exit" Margin="12,0,0,0" IsEnabled="False" HorizontalAlignment="Right" FlowDirection="RightToLeft" />
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,4">
            <TextBox x:Name="txtRunBefore" MaxLength="512" Height="26" TextChanged="TxtRunBefore_TextChanged"/>
        </DockPanel>
        <Button Grid.Row="2" Grid.Column="1" Width="28" Height="26" Content="..." Click="BtnSelectBefore_Click" />
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Arguments:" />
        <TextBox Grid.Row="4" Grid.Column="0" x:Name="txtArgumentsBefore" MaxLength="2048" Height="48" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextChanged="TxtRunBefore_TextChanged" />

        <!-- After main task -->
        <DockPanel Grid.Row="5" Grid.Column="0" Margin="0,12,0,2">
            <TextBlock Text="Run After Main Task" />
            <CheckBox x:Name="chkWaitExitAfter" Content="Wait Main exit" Margin="12,0,0,0" IsEnabled="False" HorizontalAlignment="Right" FlowDirection="RightToLeft" />
        </DockPanel>
        <DockPanel Grid.Row="6" Grid.Column="0" Margin="0,0,0,4">
            <TextBox x:Name="txtRunAfter" MaxLength="512" Height="26" TextChanged="TxtRunAfter_TextChanged"/>
        </DockPanel>
        <Button Grid.Row="6" Grid.Column="1" Width="28" Height="26" Content="..." Click="BtnSelectAfter_Click" />
        <TextBlock Grid.Row="7" Grid.Column="0" Text="Arguments:" />
        <TextBox Grid.Row="8" Grid.Column="0" x:Name="txtArgumentsAfter" MaxLength="2048" Height="48" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextChanged="TxtRunAfter_TextChanged" />

        <!-- Buttons -->
        <StackPanel Grid.Row="10" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Width="100" Height="36" IsCancel="True" Margin="0,0,8,0">
                <DockPanel>
                    <Image Source="pack://application:,,,/Resources/Images24/cancel_24x24.png" Width="24" Height="24"/>
                    <TextBlock Text="Cancel" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold" />
                </DockPanel>
            </Button>
            <Button Width="100" Height="36" IsDefault="True" Click="Ok_Click">
                <DockPanel>
                    <Image Source="pack://application:,,,/Resources/Images24/Check_24x24.png" Width="24" Height="24"/>
                    <TextBlock Text="OK" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold" />
                </DockPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>