<Window x:Class="VSLauncher.Views.WarnMultipleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multiple Launch Warning" Height="220" Width="420" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Background="{DynamicResource WindowBackgroundBrush}" Foreground="{DynamicResource WindowForegroundBrush}">
    <Grid Margin="12" Background="{DynamicResource PanelBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Launch Multiple Instances" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                <Run Text="This will launch " />
                <LineBreak/>
                <Run Text="{Binding Count}" FontWeight="Bold" />
                <LineBreak/>
                <Run Text="instances of Visual Studio (or other tools). It may consume a lot of time and resources."/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="Are you sure to continue?" />
            </TextBlock>
            <CheckBox x:Name="chkDontShow" Content="Don't show this warning again" IsChecked="{Binding DontShow, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Width="100" Height="34" Margin="0,0,8,0" IsCancel="True">
                <DockPanel>
                    <Image Source="pack://application:,,,/Resources/Images24/cancel_24x24.png" Width="24" Height="24"/>
                    <TextBlock Text="Cancel" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold" />
                </DockPanel>
            </Button>
            <Button Width="100" Height="34" IsDefault="True" Click="Ok_Click">
                <DockPanel>
                    <Image Source="pack://application:,,,/Resources/Images24/Check_24x24.png" Width="24" Height="24"/>
                    <TextBlock Text="Continue" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold" />
                </DockPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>